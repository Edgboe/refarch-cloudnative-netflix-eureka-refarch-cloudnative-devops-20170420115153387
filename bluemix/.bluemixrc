#################################################################################
# Bluemix services enablement
#################################################################################

#################################################################################
# Image names
#################################################################################
REGISTRY_IMAGE=microservices-refapp-eureka:latest

#################################################################################
# Image registries
#################################################################################
BLUEMIX_REGISTRY_HOST=$(cf ic info | grep Registry | awk '{print $4}')
BLUEMIX_REGISTRY_NAMESPACE=$(cf ic namespace get)

#################################################################################
# Routes
#################################################################################
ROUTES_DOMAIN=mybluemix.net
REGISTRY_HOSTNAME=microservices-refapp-eureka-${BLUEMIX_REGISTRY_NAMESPACE}
REGISTRY_URL=http://${REGISTRY_HOSTNAME}.${ROUTES_DOMAIN}
